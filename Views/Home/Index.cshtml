@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/home.css" />
<section class="home-intro">
    <h1>Welcome to <span class="brand">Coin Filter</span></h1>
    <p>
        Coin Filter helps you quickly compare and filter cryptocurrency listings
        across top exchanges like Binance, Bitget, Bybit, Gate.io, and MEXC.
        Discover unique pairs and opportunities in one place.
    </p>
</section>

